<% provide(:title, 'Sign up') %>
<h1 class="mt-5 text-success">Sign up</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3 my-form">
    <%= form_for(@user) do |f| %>
       <%= render 'shared/error_messages' %>

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :email %>
      <%= f.text_field :email %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation %>

      <%= f.submit "Create my account", class: "btn btn-large btn-primary" %>
    <% end %>
    <p>Already registered? <%= link_to "Log In now!", login_path %></p>
  </div>
</div>

